server {
  listen $PORT default_server;

  location / {
    root   /usr/share/nginx/html;
    index index/index.html;
	location = /chart {
            rewrite ^/chart$ /chart.html;
        }
  }
  
  location ~ \.css {
		add_header  Content-Type    text/css;
	}
  location ~ \.js {
	add_header  Content-Type    application/x-javascript;
  }
}